<div class="column is-one-quarter">
  <div class="item card">
  <br>
    <div class="card-image">
    <div class="main_image">
      <% if item.upload.present? %>
        <figure class="image">
          <%= image_tag item.icon, alt: "#{item.name}_image" %>
        </figure>
      <% elsif %>
        <% item.name.include?('TM') %>
          <figure class="image">
            <%= image_tag item.image, alt: "#{item.name}_image" %>
          </figure>
        <% else %>
          <figure class="image is-48x48">
            <%= image_tag item.image, alt: "#{item.name}_image" %>
          </figure>
      <% end %>
      </div>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
         <p class="title is-4">
          <% if name_is_link %>
            <%= link_to item.name, item %>
          <% else %>
            <%= item.name %>
          <% end %>
        </p>
        <p class="subtitle is-4"><strong>Cost: </strong><%= number_to_currency(item.price / 100) %></p>
        <p class="subtitle is-6"><strong>Store Location: </strong><%= link_to item.category.name, item.category %></p>
        </div>
      </div>
      <div class="content">
        <strong>Description: </strong><%= item.description %>
        <br>
        <br>
          <% if signed_in? %>
              <% unless item_in_cart?(item) %>
              <p class="title is-3">
                <%= link_to 'Add to Bag', add_item_path(item.name), method: :post, class: 'button is-rounded is-light' %>
                <%= image_tag item.sprit, alt: "#{item.name}_sprit" %>
              </p>
              <% else %>
              <p class="title is-3">
                <%= link_to "Add Another", add_item_path(item.name), method: :post, class: 'button is-rounded is-info' %>
                <%= image_tag item.sprit, alt: "#{item.name}_sprit" %>
              </p>
              <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>