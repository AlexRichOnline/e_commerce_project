<!DOCTYPE html>
<html>
  <head>
    <title>ECommerceProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
  </head>

  <body>
      <section class="section">
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item" href="https://bulma.io">
            <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
          </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
       </a>
      </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item">
        Home
      </a>

      <a class="navbar-item">
        Documentation
      </a>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
          <a class="navbar-item">
            About
          </a>
          <a class="navbar-item">
            Jobs
          </a>
          <a class="navbar-item">
            Contact
          </a>
          <hr class="navbar-divider">
          <a class="navbar-item">
            Report an issue
          </a>
        </div>
      </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-primary">
            <strong>Sign up</strong>
          </a>
          <a class="button is-light">
            Log in
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

  <section class="section">
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
          <h1 class="title"><%= link_to 'PokeMarketplace', root_path , class: 'navbar-item'%></h1>
      </div>
      <div class="navbar-start">
        <%= link_to 'Shop by Department Floor', categories_path , class: 'navbar-item'%>
        <%= link_to 'Service Counter', about_us_path , class: 'navbar-item'%>
      </div>
    </nav>
    </section>
    <%= form_with(url:  search_results_items_path , method: "get", local: true) do %>
      <%= label_tag(:query, "Search:", class: 'label') %>
      <%= text_field_tag(:query, '', class: 'input is-rounded', placeholder: 'Poke-Search') %>
      <div class="field">
        <%= label_tag(:floors, "Filter by store floor:" , class: 'label') %>
        <% floors = Category.all %>
        <div class="control">
          <div class="select">
            <select name="floors">
              <option value="all">All Floors</option>
              <% floors[1..-1].each do |floor| %>
                <option value="<%= floor.name %>"><%= floor.name %></option>
              <% end %>
            </select>
          </div>
        </div>
      </div>
      <%= submit_tag("Search", class: 'button is-link') %>
    <% end %>
      <%= yield %>
    </section>
  </body>
</html>
