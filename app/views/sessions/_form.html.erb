<%= form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.label :email, class: 'subtitle'%>
    <%= form.text_field :email, type: 'email', class: 'input' %>
  </div>

  <div class="password-field">
    <%= form.label :password, class: 'subtitle' %>
    <%= form.password_field :password, class: 'input' %>
  </div>

  <div class="submit-field">
    <%= form.submit %>
  </div>
  <br>
  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: 'button is-link' %>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path, class: 'button is-link' %>
  </div>
<% end %>
